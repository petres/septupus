<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Septupus</title>
    <script type = "text/javascript" src = "{{ url_for('static', filename=manifest['main.js']) }}" ></script>
</head>
<body>
    <div class="container">
        <h1>Septupus</h1>
        <ul class="nav nav-tabs" role="tablist">
            {% for id, module in modules.items() %}
                <li class="nav-item">
                    <a class="nav-link{% if activeModule == id %} active{% endif %}" data-toggle="tab" href="#{{ id }}" role="tab" aria-controls="{{ id }}" aria-selected="true">{{ id }}</a>
                </li>
            {% endfor %}
        </ul>
        <div class="tab-content">
            {% for id, module in modules.items() %}
                <div class="tab-pane fade{% if activeModule == id %} show active{% endif %}" id="{{ id }}" role="tabpanel" aria-labelledby="{{ id }}-tab">
                    <div class="row mt-2">
                        {% with module=id %}
                            {% include [id ~ '/base.html.j2', 'generic/base.html.j2'] %}
                        {% endwith %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</body>
</html>
